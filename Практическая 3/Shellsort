def shell_sort(arr):
    n = len(arr)
    gap = n // 2  # Начальный шаг
    
    while gap > 0:
        for i in range(gap, n):
            temp = arr[i]
            j = i
            while j >= gap and arr[j - gap] > temp:
                arr[j] = arr[j - gap]
                j -= gap
            arr[j] = temp
        gap //= 2  # Уменьшаем шаг

# Тестовый пример
arr = [12, 34, 54, 2, 3]
print("Исходный массив:", arr)
shell_sort(arr)
print("Отсортированный массив:", arr)
